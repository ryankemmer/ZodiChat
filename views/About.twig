    <style>
    
/* Container holding the image and the text */
.container {
    margin-top: 0px;
    padding-top: 0px;
    position: relative;
    text-align: center;
    color: white;
}

/* Centered text */
.centered {
    font-size: 100px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: sans-serif;
    animation-name: textanimation;
    animation-duration: 6s;
    
}

@keyframes textanimation{
0% { 
        opacity:0;
        transform: translateY(-4rem)
    scale(.6)}
}
100% {
        opacity: 1;
        transform: none;
    
}

body {
