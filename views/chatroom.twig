        <div class="sidenav">
            <h3 style="border-bottom: solid 1px">New Matches</h3>
            {% for user in allUsers %}
                {% if user.userID in allMatches %}
                    <a class="links" href="/chatroom/{{user.userID}}"><li>{{user.firstName}}</li></a>
                {% endif %}
            {% endfor %}
</div>
    
    {% for message in messages %}
        <p>{{message.author}}: {{message.message}}</p>
    {% endfor %}
            
   <form method="POST" action="/message/{{otherUserID}}">
